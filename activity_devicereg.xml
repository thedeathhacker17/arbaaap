<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Toolbar (optional, can be added if needed) -->

    <!-- Other Views like EditTexts and Buttons -->
    <EditText
        android:id="@+id/confirmUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:hint="Confirm User ID"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:textColor="#3A3B3C"

        android:layout_marginStart="4dp"
        tools:ignore="ExtraText" />

    <EditText
        android:id="@+id/confirmMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Mobile Number"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:textColor="#3A3B3C"

         />

    <EditText
        android:id="@+id/enterMachineId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Machine ID"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:textColor="#3A3B3C"
        android:layout_marginStart="4dp"
        />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp"
        android:backgroundTint="#045f5f"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
       />
</LinearLayout>
