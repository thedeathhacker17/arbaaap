<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_gravity="center">

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Updation"
            android:textSize="24sp"
            android:textColor="#3A3B3C"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Phone Number -->
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:textColorHint="#8A8A8A" />

        <!-- Confirm Phone Number -->
        <EditText
            android:id="@+id/confirmPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Phone Number"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:textColorHint="#8A8A8A" />

        <!-- Machine ID -->
        <EditText
            android:id="@+id/machineId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Machine ID"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:textColorHint="#8A8A8A" />

        <!-- Password -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword"
            android:textColorHint="#8A8A8A" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword"
            android:textColorHint="#8A8A8A" />

        <!-- Business Address -->
        <EditText
            android:id="@+id/businessAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business Address"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:textColorHint="#8A8A8A" />

        <!-- Email Address -->
        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress"
            android:textColorHint="#8A8A8A" />

        <!-- Confirm Email Address -->
        <EditText
            android:id="@+id/confirmEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Email Address"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress"
            android:textColorHint="#8A8A8A" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:backgroundTint="#045f5f"
            android:elevation="4dp"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
