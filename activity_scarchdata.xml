<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Option"
        android:textSize="18sp"
        android:textColor="#3A3B3C"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Dropdown (Spinner) -->
    <Spinner
        android:id="@+id/searchOptionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:spinnerMode="dropdown"/>

    <!-- Input Field for Customer ID -->
    <EditText
        android:id="@+id/customerIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Customer ID"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:textColorHint="#8A8A8A"/>

    <!-- Input Field for Mobile Number -->
    <EditText
        android:id="@+id/mobileNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile Number"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:textColorHint="#8A8A8A"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:backgroundTint="#045f5f"
        android:elevation="4dp"
        android:layout_marginTop="16dp"/>

    <!-- Square Box to Display Data -->
    <TextView
        android:id="@+id/displayDataBox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:elevation="4dp"
        android:text="Data will be displayed here"
        android:textColor="#3A3B3C"
        android:textSize="16sp"
        android:visibility="gone"/>
</LinearLayout>
